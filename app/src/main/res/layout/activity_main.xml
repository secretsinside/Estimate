<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.secretsinside.estimate.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical">

        <TextView
            android:padding="10dp"
            android:id="@+id/textViewTransformerAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transformer Amount" />

        <EditText
            android:id="@+id/editTextTransformerAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@+id/textViewTransformerAmount" />


        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/editTextTransformerAmount"
            android:text="OK" />


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/percentLayout"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTransformerAmount"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:padding="10dp"
                android:id="@+id/textViewTwoPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2%"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:padding="10dp"
                android:id="@+id/textViewFourPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4%"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:padding="10dp"
                android:id="@+id/textViewFortyPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:gravity="center"
                android:layout_below="@+id/textViewTransformerAmount"
                android:layout_weight="1" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/linearLayout"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/twoPercentOfAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fourPercentOfAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/fortyPercentOfAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1" />



        </LinearLayout>




    </LinearLayout>

</android.support.constraint.ConstraintLayout>
